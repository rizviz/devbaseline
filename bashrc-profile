# .bashrc
# r00txs specific bashr . less typing , simple and easier muscle memory . FTW !
# Once downloaded , kickoff installer "~/profile/install_profile.sh" 
# User specific aliases and functions

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias grep='grep -i'
alias c=clear
alias e=exit
alias h=history
alias ll="ls -haltFG --color=auto | more "
alias ls="ls -hltFG --color=auto"

# directories ** NOTE : Speicific to RHEL/CENTOS
alias web="cd /var/www/html"
alias ftpdir="cd /var/ftp"
alias tftpdir="cd /var/lib/tftp"
alias netscripts="cd /etc/sysconfig/network-scripts"

# networks
alias ips='ip add | grep inet'
alias publicip='dig +short myip.opendns.com @resolver1.opendns.com'

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

